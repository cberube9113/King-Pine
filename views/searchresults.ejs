<% include header %>

<div class="row">
  <div class="span12">
    <% include navbar %>
    <div class="row">
      <div class="span3">
        <div class="small-box shadow">
          <ul class="nav nav-pills nav-stacked">
            <% if(user != undefined && user != nameOfSearchedUser) { %>
              <% if(isfollowing == true) { %>
                <li><a href="/follow/<%= u %>" >Stop Following</a></li>
              <% } %>
              <% if(isfollowing == false) { %>
                <li><a href="/follow/<%= u %>" >Start Following</a></li>
              <% } %>
            <% } %>
            <li><span class="badge badge-important pill-badge"><%= nchirps %></span><a href="#"> Chirps</a></li>
            <li><span class="badge badge-important pill-badge"><%= following %></span><a href="#"> Following</a></li>
            <li><span class="badge badge-important pill-badge"><%= followers %></span><a href="#"> Followers</a></li>
          </ul>
        </div><br />
        
        <div class="small-box">
          <h3>Who to Follow</h3><br>
        </div><br />
        <div class="small-box">
          <h3>Trends</h3><br>
        </div><br />
      </div>
      <div class="span9">

        <h3>Chirps</h3>
        <div id="chirp_view">
          <% for(var i = 0; i < chirpdata.length; i++) { %>
            <br /><span><span class="identifier"><%= nameOfSearchedUser %></span> @<%= u %></span>
            <div class="chirper">
              <p><%= chirpdata[i].data %></p>
            </div>
          <% } %>
        </div>
       
      </div>
    </div>
  </div>
</div>